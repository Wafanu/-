#include <iostream>
с использованием пространства имен std;

void f(int a, int *b, int &c) //определение функции f
{
  а+=10;
  (*б)+=10;
  с+=10;
  cout<<"f:\t" << a << "\t"<<*b<<"\t"<<c<<endl;
}

целочисленный основной()
{
  целое x=10, y=20, z=30;
  cout<<"main:\t"<<x<<"\t"<<y<<"\t"<<z<<endl;
  f(x, &y, z); //вызов функции f
  cout<<"main:\t"<<x<<"\t"<<y<<"\t"<<z<<endl;
  вернуть 0;
}
